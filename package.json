{
  "name": "rick-morty-graphql-api",
  "version": "1.0.0",
  "description": "Express + GraphQL API for searching Rick and Morty characters",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "redis:up": "docker-compose up -d redis",
    "redis:down": "docker-compose down",
    "build": "tsc",
    "test": "jest",
    "db:create": "npx sequelize-cli db:create --config config/config.js",
    "migrate": "npx sequelize-cli db:migrate --config config/config.js",
    "seed": "ts-node src/seeders/seedCharacters.ts",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "apollo-server-express": "^3.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.6.7",
    "pg": "^8.10.0",
    "redis": "^4.6.7",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.4.1",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.2",
    "eslint": "^8.46.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
